<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="20"
      prefHeight="450.0"
      prefWidth="500.0"
      minHeight="380.0"
      minWidth="420.0">

    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0"/>
    </padding>

    <!-- Título -->
    <Label text="Mi Aplicación">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <!-- Botones del menú -->
    <Button text="Agregar usuario"
            onAction="#handleAgregarUsuario"
            maxWidth="Infinity"
            prefHeight="40.0" />
    <Button text="Listar usuarios"
            onAction="#handleListarUsuarios"
            maxWidth="Infinity"
            prefHeight="40.0" />
    <Button text="Pagar"
            onAction="#handlePagar"
            maxWidth="Infinity"
            prefHeight="40.0" />
    <Button text="Listar grupos"
            onAction="#handleListarGrupos"
            maxWidth="Infinity"
            prefHeight="40.0" />
    <Button text="Listar Pacientes"
            onAction="#handleListarPacientes"
            maxWidth="Infinity"
            prefHeight="40.0" />

</VBox>
