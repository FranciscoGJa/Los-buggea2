<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="10" style="-fx-padding: 15px;">
    
    <Label text="Mi Aplicación" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    
    <Button text="Agregar usuario" onAction="#handleAgregarUsuario" 
            style="-fx-min-width: 200px; -fx-min-height: 30px;"/>
    <Button text="Listar usuarios" onAction="#handleListarUsuarios" 
            style="-fx-min-width: 200px; -fx-min-height: 30px;"/>
            <Button text="Pagar" onAction="#handlePagar" 
            style="-fx-min-width: 200px; -fx-min-height: 30px;"/>
    <Button text="Listar grupos" onAction="#handleListarGrupos" 
            style="-fx-min-width: 200px; -fx-min-height: 30px;"/>
    <Button text="Listar Pacientes" onAction="#handleListarPacientes"
            style="-fx-min-width: 200px; -fx-min-height: 30px;"/>
</VBox> 
<VBox spacing="20" prefHeight="450.0" prefWidth="500.0" minHeight="380.0" minWidth="420.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
    <children>
        <!-- Título -->
        <Label text="Mi Aplicación">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </Label>

        <!-- Botones del menú -->
        <Button onAction="#handleAgregarUsuario" text="Agregar usuario" maxWidth="Infinity" prefHeight="40.0" />
        <Button onAction="#handleListarUsuarios" text="Listar usuarios" maxWidth="Infinity" prefHeight="40.0" />
        <Button onAction="#handleListarGrupos" text="Listar grupos" maxWidth="Infinity" prefHeight="40.0" />
        <Button onAction="#handleListarPacientes" text="Listar Pacientes" maxWidth="Infinity" prefHeight="40.0" />
    </children>
</VBox>
