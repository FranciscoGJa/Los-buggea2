<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="mx.uam.ayd.proyecto.presentacion.CrearCita.ControladorNuevaCita"
      stylesheets="@css/style.css"
      spacing="12" style="-fx-padding: 15;"> <!-- Reducido spacing y padding -->
   
   <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
   
   <Label text="Agendar Nueva Cita" styleClass="main-title">
      <padding><Insets bottom="8"/></padding> <!-- Reducido -->
   </Label>
   
   <VBox spacing="8" styleClass="info-card"> <!-- Reducido spacing -->
      <Label text="Seleccione Psicólogo:" styleClass="section-title" />
      
      <VBox spacing="3"> <!-- Reducido -->
         <Label text="Psicólogo *" styleClass="field-label" />
         <ComboBox fx:id="comboPsicologos" prefWidth="300" />
         <Label fx:id="lblPsicologoSeleccionado" text="Psicólogo: No seleccionado" styleClass="selection-info" />
      </VBox>
   </VBox>
   
   <VBox spacing="8" styleClass="info-card"> <!-- Reducido spacing -->
      <Label text="Seleccione Fecha y Hora:" styleClass="section-title" />
      
      <HBox spacing="12" alignment="CENTER_LEFT"> <!-- Reducido spacing -->
         <VBox spacing="3"> <!-- Reducido -->
            <Label text="Fecha *:" styleClass="field-label" />
            <DatePicker fx:id="datePickerFecha" prefWidth="150" />
         </VBox>
         
         <VBox spacing="3"> <!-- Reducido -->
            <Label text="Hora Disponible *:" styleClass="field-label" />
            <ComboBox fx:id="comboHorarios" prefWidth="120" />
         </VBox>
      </HBox>
      
      <HBox spacing="15" styleClass="selection-box"> <!-- Reducido spacing -->
         <Label fx:id="lblFechaSeleccionada" text="Fecha: No seleccionada" styleClass="selection-info" />
         <Label fx:id="lblHoraSeleccionada" text="Hora: No seleccionada" styleClass="selection-info" />
      </HBox>
   </VBox>
   
   <VBox spacing="3"> <!-- Reducido -->
      <Label text="Motivo de la Consulta *" styleClass="field-label" />
      <TextArea fx:id="txtMotivoConsulta" prefRowCount="3" prefHeight="80" 
                promptText="Describa el motivo principal de la consulta (maximo 500 caracteres)" />
   </VBox>
   
   <VBox spacing="3"> <!-- Reducido -->
      <Label text="Detalles Adicionales (Opcional)" styleClass="field-label" />
      <TextArea fx:id="txtDetallesAdicionales" prefRowCount="2" prefHeight="60"
                promptText="Informacion adicional que considere importante (maximo 500 caracteres)" />
   </VBox>
   
   <HBox spacing="12" alignment="CENTER_RIGHT"> <!-- Reducido spacing -->
      <Region HBox.hgrow="ALWAYS" />
      <Button fx:id="btnCancelar" text="Cancelar" styleClass="secondary-button" onAction="#cancelar" />
      <Button fx:id="btnCrearCita" text="Crear Cita" styleClass="success-button" onAction="#crearCita" />
   </HBox>
   
   <VBox spacing="3" styleClass="warning-box"> <!-- Reducido spacing -->
      <Label text="Información:" styleClass="warning-title" />
      <Label text="• Los campos marcados con * son obligatorios" styleClass="warning-text" />
      <Label text="• Primero seleccione un psicólogo, luego la fecha y hora" styleClass="warning-text" />
      <Label text="• Solo se muestran horarios disponibles del psicólogo seleccionado" styleClass="warning-text" />
      <Label text="• No se permiten fechas pasadas" styleClass="warning-text" />
   </VBox>
</VBox>