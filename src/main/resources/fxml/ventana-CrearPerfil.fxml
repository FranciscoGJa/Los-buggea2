<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.uam.ayd.proyecto.presentacion.CrearPerfilCitas.ControladorCrearPerfilCitas"
            stylesheets="@css/style.css"
            prefHeight="700.0" prefWidth="900.0">
   
   <center>
      <VBox spacing="15.0" style="-fx-padding: 20;">  <!-- Reducido de 25 a 15 -->
         <Label text="Crear Nuevo Perfil de Citas" 
                styleClass="main-title" />
         
         <VBox spacing="15.0" styleClass="content-card">  <!-- Reducido de 20 a 15 -->
            <Label text="Información Personal" styleClass="section-title" />
            
            <!-- Campo Nombre Completo -->
            <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
               <Label text="Nombre Completo *" styleClass="field-label" />
               <TextField fx:id="txtNombreCompleto" prefWidth="400.0" 
                         promptText="Ingrese el nombre completo" />
            </VBox>
            
            <HBox spacing="20.0">  <!-- Reducido de 30 a 20 -->
               <!-- Campo Edad -->
               <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
                  <Label text="Edad *" styleClass="field-label" />
                  <TextField fx:id="txtEdad" prefWidth="120.0" 
                            promptText="Ej: 25" />
               </VBox>
               
               <!-- Campo Sexo -->
               <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
                  <Label text="Sexo *" styleClass="field-label" />
                  <VBox spacing="5.0">  <!-- Reducido de 8 a 5 -->
                     <HBox spacing="10.0">  <!-- Reducido de 15 a 10 -->
                        <RadioButton fx:id="radioHombre" text="Hombre" />
                        <RadioButton fx:id="radioMujer" text="Mujer" />
                        <RadioButton fx:id="radioOtro" text="Otro" />
                     </HBox>
                     <TextField fx:id="txtOtroSexo" prefWidth="200.0" 
                               promptText="Especifique el sexo"
                               disable="true" />
                  </VBox>
               </VBox>
            </HBox>
            
            <!-- Campo Dirección -->
            <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
               <Label text="Dirección *" styleClass="field-label" />
               <TextField fx:id="txtDireccion" prefWidth="400.0" 
                         promptText="Ingrese la dirección completa" />
            </VBox>
            
            <!-- Campo Ocupación -->
            <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
               <Label text="Ocupación *" styleClass="field-label" />
               <TextField fx:id="txtOcupacion" prefWidth="400.0" 
                         promptText="Ej: Estudiante, Empleado, Profesionista, etc." />
            </VBox>
            
            <!-- Campos Opcionales -->
            <VBox spacing="10.0">  <!-- Reducido de 15 a 10 -->
               <Label text="Información de Contacto (Opcional)" styleClass="section-subtitle" />
               
               <HBox spacing="20.0">  <!-- Reducido de 30 a 20 -->
                  <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
                     <Label text="Teléfono" />
                     <TextField fx:id="txtTelefono" prefWidth="200.0" 
                               promptText="Ej: 555-123-4567" />
                  </VBox>
                  
                  <VBox spacing="3.0">  <!-- Reducido de 5 a 3 -->
                     <Label text="Email" />
                     <TextField fx:id="txtEmail" prefWidth="250.0" 
                               promptText="Ej: usuario@ejemplo.com" />
                  </VBox>
               </HBox>
            </VBox>
            
            <!-- Botones de Acción -->
            <HBox spacing="15.0" style="-fx-padding: 15 0 0 0;">  <!-- Reducido padding de 20 a 15 -->
               <Button text="Guardar Perfil" 
                      onAction="#guardarPerfil" 
                      styleClass="success-button"
                      prefWidth="150" />
               
               <Button text="Cancelar" 
                      onAction="#cancelar" 
                      styleClass="secondary-button"
                      prefWidth="150" />
               
               <Button text="Limpiar Formulario" 
                      onAction="#limpiarFormulario" 
                      styleClass="warning-button"
                      prefWidth="150" />
            </HBox>
            
            <!-- Nota sobre campos obligatorios -->
            <Label text="* Campos obligatorios" 
                   styleClass="note-text" />
         </VBox>
      </VBox>
   </center>
</BorderPane>