<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-background-color: white;
             -fx-padding: 25;
             -fx-border-color: #c7d1ff;
             -fx-border-width: 2;
             -fx-border-radius: 10;
             -fx-background-radius: 10;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.20), 15, 0.2, 0, 0);">

    <Label text="Agenda del PsicÃ³logo"
           style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <Label text="Fecha:"/>
        <DatePicker fx:id="datePicker" />
        <Button text="Buscar"
                onAction="#buscarPorFecha"
                style="-fx-background-color: #4a6eff;
                       -fx-font-weight:bold;
                       -fx-text-fill: white;
                       -fx-background-radius: 6;"/>
    </HBox>

    <TableView fx:id="tablaAgenda" prefHeight="400">
        <columns>
            <TableColumn fx:id="colHora" text="Hora" prefWidth="100"/>
            <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="200"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="150"/>
        </columns>
    </TableView>

    <Label fx:id="lblInfo"
           style="-fx-text-fill: #4a4a4a; -fx-font-size: 14;"/>
</VBox>
