<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" 
            xmlns:fx="http://javafx.com/fxml/1"
            prefHeight="700.0" prefWidth="800.0"
            style="-fx-background-color: #f8f9fa;">
   
   <center>
      <VBox spacing="25.0" style="-fx-padding: 30;">
         <Label text="Crear Nuevo Perfil de Citas" 
                style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
         
         <VBox spacing="20.0" style="-fx-background-color: white; -fx-padding: 25; -fx-border-color: #ddd; -fx-border-radius: 5;">
            <Label text="Información Personal" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
            
            <!-- Campo Nombre Completo -->
            <VBox spacing="5.0">
               <Label text="Nombre Completo *" style="-fx-font-weight: bold;" />
               <TextField fx:id="txtNombreCompleto" prefWidth="400.0" 
                         promptText="Ingrese el nombre completo"
                         style="-fx-font-size: 14; -fx-padding: 8;" />
            </VBox>
            
            <HBox spacing="30.0">
               <!-- Campo Edad -->
               <VBox spacing="5.0">
                  <Label text="Edad *" style="-fx-font-weight: bold;" />
                  <TextField fx:id="txtEdad" prefWidth="120.0" 
                            promptText="Ej: 25"
                            style="-fx-font-size: 14; -fx-padding: 8;" />
               </VBox>
               
               <!-- Campo Sexo CORREGIDO -->
               <VBox spacing="5.0">
                  <Label text="Sexo *" style="-fx-font-weight: bold;" />
                  <VBox spacing="8.0">
                     <!-- ELIMINAR: <ToggleGroup fx:id="grupoSexo" /> -->
                     <HBox spacing="15.0">
                        <RadioButton fx:id="radioHombre" text="Hombre" />
                        <RadioButton fx:id="radioMujer" text="Mujer" />
                        <RadioButton fx:id="radioOtro" text="Otro" />
                     </HBox>
                     <TextField fx:id="txtOtroSexo" prefWidth="200.0" 
                               promptText="Especifique el sexo"
                               style="-fx-font-size: 14; -fx-padding: 8;"
                               disable="true" />
                  </VBox>
               </VBox>
            </HBox>
            
            <!-- Campo Dirección -->
            <VBox spacing="5.0">
               <Label text="Dirección *" style="-fx-font-weight: bold;" />
               <TextField fx:id="txtDireccion" prefWidth="400.0" 
                         promptText="Ingrese la dirección completa"
                         style="-fx-font-size: 14; -fx-padding: 8;" />
            </VBox>
            
            <!-- Campo Ocupación -->
            <VBox spacing="5.0">
               <Label text="Ocupación *" style="-fx-font-weight: bold;" />
               <TextField fx:id="txtOcupacion" prefWidth="400.0" 
                         promptText="Ej: Estudiante, Empleado, Profesionista, etc."
                         style="-fx-font-size: 14; -fx-padding: 8;" />
            </VBox>
            
            <!-- Campos Opcionales -->
            <VBox spacing="15.0">
               <Label text="Información de Contacto (Opcional)" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #34495e;" />
               
               <HBox spacing="30.0">
                  <VBox spacing="5.0">
                     <Label text="Teléfono" />
                     <TextField fx:id="txtTelefono" prefWidth="200.0" 
                               promptText="Ej: 555-123-4567"
                               style="-fx-font-size: 14; -fx-padding: 8;" />
                  </VBox>
                  
                  <VBox spacing="5.0">
                     <Label text="Email" />
                     <TextField fx:id="txtEmail" prefWidth="250.0" 
                               promptText="Ej: usuario@ejemplo.com"
                               style="-fx-font-size: 14; -fx-padding: 8;" />
                  </VBox>
               </HBox>
            </VBox>
            
            <!-- Botones de Acción -->
            <HBox spacing="20.0" style="-fx-padding: 20 0 0 0;">
               <Button text="Guardar Perfil" 
                      onAction="#guardarPerfil" 
                      style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 10 20;"
                      prefWidth="150" />
               
               <Button text="Cancelar" 
                      onAction="#cancelar" 
                      style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"
                      prefWidth="150" />
               
               <Button text="Limpiar Formulario" 
                      onAction="#limpiarFormulario" 
                      style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 14; -fx-padding: 10 20;"
                      prefWidth="150" />
            </HBox>
            
            <!-- Nota sobre campos obligatorios -->
            <Label text="* Campos obligatorios" 
                   style="-fx-font-size: 12; -fx-text-fill: #7f8c8d; -fx-padding: 10 0 0 0;" />
         </VBox>
      </VBox>
   </center>
</BorderPane>