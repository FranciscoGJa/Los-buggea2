<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="550.0" prefWidth="700.0" minHeight="450.0" minWidth="600.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="@/css/style.css">

  <children>
    <AnchorPane prefHeight="550.0" prefWidth="700.0" styleClass="background">
      <children>
        <VBox spacing="20.0"
              AnchorPane.topAnchor="20.0"
              AnchorPane.leftAnchor="20.0"
              AnchorPane.rightAnchor="20.0"
              AnchorPane.bottomAnchor="20.0"
              styleClass="content-box">

          <!-- Título -->
          <children>
            <Label text="Registro de Paciente" styleClass="title-label">
              <font>
                <Font size="20.0" />
              </font>
            </Label>

            <!-- Datos del paciente -->
            <GridPane hgap="10.0" vgap="12.0" styleClass="form-grid">
              <columnConstraints>
                <ColumnConstraints halignment="RIGHT" percentWidth="30.0" />
                <ColumnConstraints percentWidth="70.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
              </rowConstraints>
              <children>
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="textFieldNombre"
                           promptText="Nombre completo"
                           GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Correo:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="textFieldCorreo"
                           promptText="usuario@correo.com"
                           GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="textFieldTelefono"
                           promptText="5512345678"
                           GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Edad:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="textFieldEdad"
                           promptText="Edad en años"
                           GridPane.rowIndex="3" GridPane.columnIndex="1" />
              </children>
              <VBox.margin>
                <Insets left="30.0" />
              </VBox.margin>
            </GridPane>

            <!-- Botón Agregar Paciente -->
            <HBox alignment="CENTER">
              <children>
                <Button text="Agregar paciente"
                        onAction="#handleAgregarPaciente"
                        prefWidth="180.0"
                        styleClass="primary-button" />
              </children>
            </HBox>

            <!-- Separador visual: título de baterías -->
            <Label text="Baterías clínicas disponibles para el paciente:"
                   VBox.vgrow="NEVER"
                   styleClass="subtitle-label">
              <font>
                <Font size="16.0" />
              </font>
              <VBox.margin>
                <Insets top="10.0" />
              </VBox.margin>
            </Label>

            <!-- Botones de BAI / BDI / CEPER -->
            <HBox alignment="CENTER" spacing="20.0">
              <children>
                <Button fx:id="btnBAI"
                        text="BAI"
                        prefWidth="120.0"
                        disable="true"
                        onAction="#handleBAI"
                        styleClass="secondary-button" />

                <Button fx:id="btnBDI"
                        text="BDI-II"
                        prefWidth="120.0"
                        disable="true"
                        onAction="#handleBDI"
                        styleClass="secondary-button" />

                <Button fx:id="btnCEPER"
                        text="CEPER"
                        prefWidth="120.0"
                        disable="true"
                        onAction="#handleCeper"
                        styleClass="secondary-button" />
              </children>
              <VBox.margin>
                <Insets top="20.0" />
              </VBox.margin>
            </HBox>

          </children>
        </VBox>
      </children>
    </AnchorPane>
  </children>
</VBox>
