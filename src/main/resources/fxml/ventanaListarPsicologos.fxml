<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="800.0" minHeight="400.0" minWidth="650.0" spacing="15" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <!-- Título -->
        <Label text="Psicólogos registrados en el centro:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>

        <!-- Tabla con AnchorPane para que crezca -->
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tableViewPsicologos" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn fx:id="tableColumnID" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="tableColumnNombre" prefWidth="170.0" text="Nombre" />
                        <TableColumn fx:id="tableColumnCorreo" prefWidth="200.0" text="Correo" />
                        <TableColumn fx:id="tableColumnTelefono" prefWidth="130.0" text="Teléfono" />
                        <TableColumn fx:id="tableColumnEspecialidad" prefWidth="180.0" text="Especialidad" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>

        <!-- Botón Cerrar -->
        <Button mnemonicParsing="false" onAction="#handleRegresar" prefWidth="100.0" text="Cerrar" alignment="CENTER" />
    </children>
</VBox>