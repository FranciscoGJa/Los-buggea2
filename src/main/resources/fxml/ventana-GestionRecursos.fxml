<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="mx.uam.ayd.proyecto.presentacion.material.ControlMaterialDidactico"
            stylesheets="@../css/style.css">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets top="10" bottom="10" left="15"/>
            </padding>
            <Label style="-fx-text-fill: black; -fx-font-size: 18px; -fx-font-weight: bold;"
                   text=" Control de Material DidÃ¡ctico" HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;"
                   text="Selecciona los materiales a apartar" />

            <TableView fx:id="tablaMateriales" prefHeight="400" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colSeleccion" prefWidth="100" text="Seleccionar" /> 
                   <TableColumn fx:id="colImagen" prefWidth="100" text="Imagen" />
                   <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre del material" />
                    <TableColumn fx:id="colTipo" prefWidth="150" text="Tipo" />
                    <TableColumn fx:id="colEstado" prefWidth="150" text="Disponibilidad" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="btnApartar" prefHeight="52.0" prefWidth="163.0" 
                    text="Apartar seleccionados" />
            <Button fx:id="btnLiberar" prefHeight="54.0" prefWidth="155.0" 
                    text="Liberar material" />
        </HBox>
    </bottom>
</BorderPane>